<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dextracker"
    android:versionCode="4"
    android:versionName="4.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name=".SequentialGame"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Leaderboard"
            android:label="@string/title_activity_leaderboard"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SmashGame"
            android:label="@string/title_activity_game_two"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".TypeGame"
            android:label="@string/title_activity_type_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Analysis"
            android:label="@string/title_activity_analysis"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LeaderboardMenu"
            android:label="@string/title_activity_leaderboard_menu"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".TypeRightGame"
            android:label="@string/title_activity_type_right_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>